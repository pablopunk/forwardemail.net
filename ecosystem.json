{
  "apps": [
    {
      "name": "smtp",
      "script": "app.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production",
        "SMTP_PORT": "3025",
        "IS_NOT_SECURE": "true"
      }
    },
    {
      "name": "smtps",
      "script": "app.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production",
        "SMTP_PORT": "3465"
      }
    },
    {
      "name": "msa",
      "script": "app.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production",
        "SMTP_PORT": "3587"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": [
        "us-sf-1-mx1-forwardemail-net-deploy",
        "uk-london-1-mx1-forwardemail-net-deploy",
        "us-nyc-1-mx2-forwardemail-net-deploy"
      ],
      "ref": "origin/master",
      "repo": "git@github.com:niftylettuce/forward-email.git",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy":
        "yarn install --production && pm2 startOrGracefulReload ecosystem.json --env production --update-env"
    }
  }
}
